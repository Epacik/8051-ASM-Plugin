<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:QaD8051JDE.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:QaD8051JDE.Views;assembly=QaD8051JDE"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
             x:Class="QaD8051JDE.Views.DocumentationElementEditor">

    <!--<Design.DataContext>
        <vm:DocumentationElementEditor/>
    </Design.DataContext>-->

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5, 0">
            <Button Click="SaveButtonClick">üíæ</Button>
            <Button Click="RefreshButtonClick">‚Ü©Ô∏è</Button>
            <ToggleSwitch Margin="20,0,0,0" OnContent="Don't generate syntax" OffContent="Generate syntax" x:Name="DontGenerateSyntax"/>
            <ToggleSwitch Margin="20,0,0,0" OnContent="Don't duplicate in all documentation" OffContent="Duplicate in all documentation" x:Name="DontDuplicate"/>
        </StackPanel>
      <TextBlock VerticalAlignment="Center"
                 Margin="5,0"
                 HorizontalAlignment="Right"
                 IsVisible="False"
                 x:Name="SavedText">
        Saved
      </TextBlock>
        
        <ScrollViewer Grid.Row="1" Margin="5">
            <StackPanel >
                <TextBlock Text="Detail:"/>
                <TextBox Text="{Binding Detail}" FontFamily="Cascadia Code" />

                <TextBlock Text="Description"/>
                <TextBox Text="{Binding Description}" AcceptsReturn="True" AcceptsTab="True" Height="250" FontFamily="Cascadia Code"/>

                <!--<TextBox Text="{Binding AffectedFlags}" AcceptsReturn="True" AcceptsTab="True" Height="150"/>-->
                <Expander Header="Affected Flags" HorizontalContentAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <Button Click="AddFlagButton_Click">‚ûï</Button>
                            <Button Click="RemoveFlagButton_Click" >‚ûñ</Button>
                        </StackPanel>
                        <StackPanel x:Name="AffectedFlagsPanel">
                            
                        </StackPanel>
                    </StackPanel>
                </Expander>


                <Expander Header="Valid operands" MaxHeight="999999">
                    <StackPanel HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <Button Click="AddOperandButton_Click">‚ûï</Button>
                            <Button Click="RemoveOperandButton_Click" >‚ûñ</Button>
                        </StackPanel>
                      <StackPanel x:Name="OperandsPanel" Orientation="Horizontal" MaxHeight="999999">

                      </StackPanel>
                    </StackPanel>
                </Expander>

              <StackPanel Orientation="Horizontal"
                          Spacing="5"
                          Margin="0,20,0,0">
                <TextBlock VerticalAlignment="Center" Text="Prefix:"/>
                <CheckBox IsChecked="{Binding PrefixRequired}" Content="Required"/>
              </StackPanel>
              <TextBox Text="{Binding Prefix}" FontFamily="Cascadia Code" />
              <!--<TextBox Text="{Binding ValidOperands}" AcceptsReturn="True" AcceptsTab="True" Height="100"/>-->

              <TextBlock>Label: </TextBlock>
              <TextBox Text="{Binding Label}"></TextBox>
            </StackPanel>
        </ScrollViewer>

        
    </Grid>
</UserControl>
