<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="130" d:DesignHeight="100"
             x:Class="QaD8051JDE.Views.OperandsEditor">
    <StackPanel Margin="5">
        <TextBlock x:Name="Title" Text="Operand 0"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="Selection" GroupName="OperandsEditorGroup"/>
            <Button Click="AddValueButton_Click">➕</Button>
            <Button Click="RemoveValueButton_Click" >➖</Button>
        </StackPanel>
        <ListBox x:Name="ValidValues" SelectionMode="Single"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 MaxHeight="999999">
        </ListBox>
    </StackPanel>
</UserControl>
