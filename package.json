{
	"name": "8051-asm-plugin",
	"description": "Language server with 8051 Assembly support",
	"author": "Epat",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": ""
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
	],
	"stopOnEntry": true,
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"*",
		"onLanguage:asm8051"
	],
	"main": "./client/out/extension",
	"contributes": {
		
		"configuration": {
			"type": "object",
			"title": "8051-asm-plugin",
			"properties": {
				"asm8051.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"asm8051.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"asm8051.kit": {
					"scope": "window",
					"type":"string",
					"enum": [
						"generic",
						"DSM-51"
					],
					"enumDescriptions": [
						"desc1",
						"desc2"
					],
					"default": "generic",
					"description": ""
				}
			}
		},
		"languages": [
			{
				"id": "asm8051",
				"extensions": [
					".asm",
					".h51",
					".a51"
				],
				"aliases": [
					"8051 Assembly",
					"8051"
				]
			}
		],
		"grammars": [
			{
				"language": "asm8051",
				"scopeName": "source.asm8051",
				"path": "./syntaxes/asm.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "asm8051",
				"path": "./snippets/arthmetic.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/boolean.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/dataTransfer.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/initsAndProgramControl.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/logical.code-snippets"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"mocha": "^8.1.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^4.0.2"
	}
}
