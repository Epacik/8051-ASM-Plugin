{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "8051 Assembly",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"name": "string.quoted.double.asm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.asm",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "string.quoted.double.asm",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.asm",
					"match": "\\\\."
				}
			]
		},
		{
			"name":"comment.line",
			"match": ";.*$"
		},
		{
			"name": "keyword.other",
			"match": "(?<=(LCALL|ACALL|CALL|LJMP|SJMP)\\s*)\\w+"
		},
		{
			"name": "keyword.control.asm",
			"match": "\\b(NOP|AJMP|LJMP|RR|INC|JBC|ACALL|LCALL|RRC|DEC|JB|RL|ADD|JNB|ACALL|RLC|ADDC|JC|ORL|JNC|ANL|JZ|XRL|JNZ|XRL|JMP|MOV|SJMP|MOVC|DIV|SUBB|MUL|CPL|CJNE|PUSH|CLR|SWAP|XCH|POP|SETB|DA|DJNZ|XCHD|MOVX|ORG|CALL)\\b"
		},
		{
			"name": "keyword.other",
			"match": "^\\w+:$"
		},
		
		{
			"name": "meta.structure.dictionary.key.python",
			"match": "\\b(RET|RETI)\\b"
		},
		{
			"name": "entity.name.class",
			"match": "@?R[0-7]"
		},
		{
			"name": "entity.name.tag",
			"match": "\\b(A|B|AB|C)\\b"
		},
		{
			"name":  "variable.name",
			"match": "#[01]+[Bb]\\b"
		},
		{
			"name":  "variable.name",
			"match": "#[0-9]\\b"
		},
		{
			"name":  "variable.name",
			"match": "#[0-9][0-9A-Fa-f][Hh]\\b"
		},
		{
			"name":	"support.function",
			"match": "\\b(ORG|DB|DW|END|EQU|SET|BIT|REG|IF|ELSE|ENDIF|MACRO|ENDM|MACEND|EXITM|INCLUDE|INCDIR)\\b"
		}
	],
	"repository": {
	},
	"scopeName": "source.asm8051"
}