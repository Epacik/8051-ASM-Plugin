// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "cmake.configureOnOpen": false,
    "i18n-ally.pathMatcher": "package.nls.{locale}.json",
    "i18n-ally.keystyle": "flat",
    "i18n-ally.displayLanguage": "",
    "i18n-ally.localesPaths": [
        "."
    ],
    "i18n-ally.annotationDelimiter": "",
    "i18n-ally.dirStructure": "file",
    "i18n-ally.editor.preferEditor": false,
    "i18n-ally.enabledFrameworks": [
        "vscode"
    ],
    "i18n-ally.extract.keyMaxLength": 200,
    "i18n-ally.fullReloadOnChanged": true,
    "i18n-ally.enabledParsers": [
        "json"
    ],
    "i18n-ally.defaultNamespace": "",
    "i18n-ally.refactor.templates": [
        {
            "source": "js-template",
            "template": "localize('{key}')",
        }
    ]
}