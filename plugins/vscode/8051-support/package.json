{
	"name": "8051-support",
	"displayName": "8051 support",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:8051-suppport.helloWorld",
		"onLanguage:plaintext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [],
		"languages": [
			{
				"id": "asm8051",
				"extensions": [
					".asm",
					".h51",
					".a51"
				],
				"aliases": [
					"8051",
					"8051 Assembly"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "8051-asm-plugin",
			"properties": {
				"asm8051.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"asm8051.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"asm8051.kit": {
					"scope": "window",
					"type": "string",
					"enum": [
						"generic",
						"DSM-51"
					],
					"enumDescriptions": [
						"Turns on documentation and diagnostics for assembly instructions only",
						"Turns on documentation and diagnostics for assembly instructions and subroutines available in DSM-51"
					],
					"default": "generic",
					"description": "Changes available set of documentation and diagnostics"
				},
				"asm8051.language": {
					"scope": "window",
					"type": "string",
					"enum": [
						"default",
						"english",
						"polski"
					],
					"default": "default",
					"description": "Changes language of showed documentation, diagnostics, errors and more"
				}
			}
		},
		"grammars": [
			{
				"language": "asm8051",
				"scopeName": "source.asm8051",
				"path": "./syntaxes/asm.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "asm8051",
				"path": "./snippets/arthmetic.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/boolean.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/dataTransfer.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/initsAndProgramControl.code-snippets"
			},
			{
				"language": "asm8051",
				"path": "./snippets/logical.code-snippets"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -b ./",
		"watch": "tsc -watch -b ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"@types/vscode": "^1.62.0",
		"net": "^1.0.2",
		"vscode-languageclient": "^7.0.0"
	}
}
